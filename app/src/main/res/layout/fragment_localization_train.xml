<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tudelft.sps.app.LocalizationTrainFragment"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="10"
        app:columnCount="3"
        app:rowCount="10">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 1"
            android:id="@+id/c1_a1"
            android:layout_column="1"
            android:layout_row="9"
            app:layout_gravity="fill"
            app:layout_column="1"
            app:layout_row="9"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 2"
            android:id="@+id/c2_a2"
            android:layout_column="1"
            android:layout_row="8"
            app:layout_gravity="fill"
            app:layout_row="8"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 3"
            android:id="@+id/c3_a3"
            android:layout_column="1"
            android:layout_row="7"
            app:layout_gravity="fill"
            app:layout_column="1"
            app:layout_row="7"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 4"
            android:id="@+id/c4_a4"
            android:layout_column="1"
            android:layout_row="6"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 5"
            android:id="@+id/c5_a5"
            android:layout_column="1"
            android:layout_row="5"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 6"
            android:id="@+id/c6_a6"
            android:layout_column="1"
            android:layout_row="4"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 7"
            android:id="@+id/c7_a7"
            android:layout_column="1"
            android:layout_row="3"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 8"
            android:id="@+id/c8_a8"
            android:layout_column="1"
            android:layout_row="2"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 9"
            android:id="@+id/c9_a9"
            android:layout_column="1"
            android:layout_row="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aisle 10"
            android:id="@+id/c10_a10"
            android:layout_column="1"
            android:layout_row="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_column="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conf. Bottom"
            android:id="@+id/c11_conf_btm"
            android:layout_column="0"
            android:layout_row="9"
            app:layout_gravity="fill"
            app:layout_column="0"
            app:layout_row="9"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conf. Top"
            android:id="@+id/c12_conf_top"
            android:layout_column="0"
            android:layout_row="8"
            app:layout_gravity="fill"
            app:layout_row="8"
            app:layout_column="0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:id="@+id/c13_coffee"
            android:layout_column="2"
            android:layout_row="7"
            app:layout_gravity="fill"
            app:layout_column="2"
            app:layout_row="7"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plea"
            android:id="@+id/c14_plea"
            android:layout_column="0"
            android:layout_row="6"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_column="0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mtg"
            android:id="@+id/c15_mtg"
            android:layout_column="0"
            android:layout_row="5"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_column="0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flex Bottom"
            android:id="@+id/c16_flex_btm"
            android:layout_column="2"
            android:layout_row="2"
            app:layout_gravity="fill"
            app:layout_column="2"
            app:layout_row="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flex Top"
            android:id="@+id/c17_flex_top"
            android:layout_column="2"
            android:layout_row="1"
            app:layout_gravity="fill"
            app:layout_column="2"
            app:layout_row="1"/>
    </android.support.v7.widget.GridLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_wifiMeasurement"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:indeterminate="false"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView android:id="@+id/text_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="@android:drawable/editbox_background_normal"/>
    </ScrollView>

</LinearLayout>
