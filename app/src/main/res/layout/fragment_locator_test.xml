<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|top"
    tools:context="nl.tudelft.sps.app.LocalizationTestFragment"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/but_initial"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initial Belief" />

        <Button
            android:id="@+id/but_scan"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Scan" />

        <Button
            android:id="@+id/but_movement"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Movement" />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical">
        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="10"
            app:columnCount="3"
            app:rowCount="10">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 1"
                android:id="@+id/test_c1_a1"
                android:layout_column="1"
                android:layout_row="9"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="1"
                app:layout_row="9"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 2"
                android:id="@+id/test_c2_a2"
                android:layout_column="1"
                android:layout_row="8"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="8"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 3"
                android:id="@+id/test_c3_a3"
                android:layout_column="1"
                android:layout_row="7"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="1"
                app:layout_row="7"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 4"
                android:id="@+id/test_c4_a4"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="6"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 5"
                android:id="@+id/test_c5_a5"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="5"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 6"
                android:id="@+id/test_c7_a6"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="4"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 7"
                android:id="@+id/test_c7_a7"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="3"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 8"
                android:id="@+id/test_c8_a8"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="2"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 9"
                android:id="@+id/test_c9_a9"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aisle 10"
                android:id="@+id/test_c10_a10"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conf. Bottom"
                android:id="@+id/test_c11_conf_btm"
                android:layout_column="0"
                android:layout_row="9"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="0"
                app:layout_row="9"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conf. Top"
                android:id="@+id/test_c12_conf_top"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="8"
                app:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:id="@+id/test_c13_coffee"
                android:layout_column="2"
                android:layout_row="7"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="2"
                app:layout_row="7"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plea"
                android:id="@+id/test_c14_plea"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="6"
                app:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mtg"
                android:id="@+id/test_c15_mtg"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_row="5"
                app:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flex Bottom"
                android:id="@+id/test_c16_flex_btm"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="2"
                app:layout_row="2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flex Top"
                android:id="@+id/test_c17_flex_top"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_margin="-4dp"
                app:layout_gravity="fill"
                app:layout_column="2"
                app:layout_row="1"/>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <TextView
            android:id="@+id/txt_locator_test_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>

</LinearLayout>